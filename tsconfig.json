{
  "compilerOptions": {
    "target": "es2019",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
 
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["triviab-app/*"],
      "@ws/*": ["ws-server/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
