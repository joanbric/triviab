{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "noEmit": false
  },
  "references": [
    {
      "path": "../types"
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/*",
    "state/*"
  ]
}
